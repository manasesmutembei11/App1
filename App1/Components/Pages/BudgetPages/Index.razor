@page "/budgets"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject App1.Data.App1Context DB
@using App1.Data

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="budgets/create">Create New</a>
</p>

<QuickGrid Class="table" Items="DB.Budget">
    <PropertyColumn Property="budget => budget.Title" />
    <PropertyColumn Property="budget => budget.Amount" />
    <PropertyColumn Property="budget => budget.Category" />
    <PropertyColumn Property="budget => budget.DateAuthored" />
    <PropertyColumn Property="budget => budget.Description" />

    <TemplateColumn Context="budget">
        <a href="@($"budgets/edit?id={budget.Id}")">Edit</a> |
        <a href="@($"budgets/details?id={budget.Id}")">Details</a> |
        <a href="@($"budgets/delete?id={budget.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
